{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "lib": [
      "es2020"
    ],
    "target": "es2020",
    "module": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": [
    "node",
    "aws-sdk"
  ]
}
