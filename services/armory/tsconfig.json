{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "lib": ["es2020"],
        "target": "es2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "types": [
        "node",
        "aws-sdk"
    ]
}